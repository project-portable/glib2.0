name: glib-2.0
slug: project-portable/glib2.0

build:
  configure: meson
  make: ninja

dependencies:
  apt:
    - dbus
    - debhelper
    - desktop-file-utils
    - dh-exec
    - dh-python
    - docbook-xml
    - docbook-xsl
    - dpkg-dev
    - gettext
    - gtk-doc-tools
    - libdbus-1-dev
    - libelf-dev
    - libffi-dev
    - libmount-dev
    - libpcre3-dev
    - libselinux1-dev
    - libxml2-utils
    - linux-libc-dev
    - pkg-config
    - python3
    - python3-dbus
    - python3-gi
    - shared-mime-info
    - tzdata
    - xsltproc
    - xterm
    - zlib1g-dev
  download:
    - https://download.gnome.org/sources/glib/2.64/glib-2.64.1.tar.xz
    - https://raw.githubusercontent.com/probonopd/uploadtool/master/upload.sh
    
steps:
  before:
    - tar -xJf  glib-2.64.1.tar.xz
    - mv glib-2.64.1/* .
  extra:
    - echo oi
  after:
    - bash upload.sh glib-2.0.tar.gz
